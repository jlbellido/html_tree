/**
* Implementation of hook_init().
*/
function html_tree_init() {

    if(user_access('Html Tree Export')){
        $path = drupal_get_path('module', 'html_tree');
        drupal_add_js($path .'/html_tree.js');
        drupal_add_css($path .'/html_tree.css');
    }

}

